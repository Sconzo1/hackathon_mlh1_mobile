<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tips_tv_title"
        style="@style/TitleFragmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tips_iv_image"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:src="@color/calendar_btn_food_shadow"
        app:layout_constraintBottom_toTopOf="@id/tips_tv_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tips_tv_title" />

    <TextView
        android:id="@+id/tips_tv_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="Откажитесь от пластиковых бутылок и одноразовых стаканчиков для кофе"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tips_iv_image"
        app:layout_constraintStart_toStartOf="@+id/tips_iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tips_iv_image" />

</androidx.constraintlayout.widget.ConstraintLayout>