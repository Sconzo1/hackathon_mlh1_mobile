<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CalendarLegendText">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textColor">@color/calendar_weekdayDayOfWeek</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="CalendarLegendWeekendText" parent="CalendarLegendText">
        <item name="android:textColor">@color/calendar_weekendDay</item>
    </style>

    <style name="TitleFragmentText">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/titleFragment</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>


</resources>
